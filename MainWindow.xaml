<Window x:Class="EFTLootTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EFTLootTracker"
        mc:Ignorable="d"
        Title="Tarkov Inventory Tracker" Height="700" Width="600"
        Background="#1A1A1A" Foreground="#E0E0E0" WindowStartupLocation="CenterScreen">
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Title/Search -->
            <RowDefinition Height="*"/>    <!-- List -->
            <RowDefinition Height="Auto"/> <!-- Status -->
        </Grid.RowDefinitions>

        <!-- Search & Filter Bar -->
        <Border Grid.Row="0" Background="#262626" CornerRadius="4" Padding="10" Margin="0,0,0,10" BorderBrush="#333333" BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="🔍" VerticalAlignment="Center" Margin="0,0,8,0" Opacity="0.5"/>
                <TextBox x:Name="SearchBox" Grid.Column="1" Background="Transparent" BorderThickness="0" 
                         Foreground="#E0E0E0" FontSize="14" CaretBrush="#556644"
                         TextChanged="SearchBox_TextChanged" GotFocus="SearchBox_GotFocus" LostFocus="SearchBox_LostFocus"/>
                <TextBlock x:Name="SearchPlaceholder" Grid.Column="1" Text="Eşya Ara..." IsHitTestVisible="False" 
                           VerticalAlignment="Center" Foreground="#505050" FontSize="14" Visibility="Visible"/>
                
                <ComboBox x:Name="FilterCombo" Grid.Column="2" Margin="10,0,0,0" Background="#1A1A1A" Foreground="#E0E0E0"
                          BorderBrush="#333333" BorderThickness="1" SelectionChanged="FilterCombo_SelectionChanged"
                          Padding="5,2">
                    <ComboBox.Resources>
                        <Style TargetType="ComboBoxItem">
                            <Setter Property="Background" Value="#1A1A1A"/>
                            <Setter Property="Foreground" Value="#E0E0E0"/>
                        </Style>
                    </ComboBox.Resources>
                    <ComboBoxItem Content="Tümü" IsSelected="True"/>
                </ComboBox>
            </Grid>
        </Border>

        <!-- Item List -->
        <ListBox x:Name="ItemsListBox" Grid.Row="1" Background="Transparent" BorderThickness="0" 
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListBoxItem">
                                <Border x:Name="ItemBorder" Background="#222222" CornerRadius="4" Margin="0,0,0,8" Padding="12" 
                                        BorderBrush="#313131" BorderThickness="1">
                                    <ContentPresenter />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="ItemBorder" Property="Background" Value="#2A2A2A" />
                                        <Setter TargetName="ItemBorder" Property="BorderBrush" Value="#556644" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListBox.ItemContainerStyle>
            
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="64"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Icon -->
                        <Border Width="54" Height="54" HorizontalAlignment="Center" Background="#111111" CornerRadius="2" BorderBrush="#333333" BorderThickness="1">
                            <Image Source="{Binding LocalIconPath}" Stretch="Uniform" Margin="4"/>
                        </Border>

                        <!-- Info -->
                        <StackPanel Grid.Column="1" Margin="12,0,0,0">
                            <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="15" Foreground="#E0E0E0"/>
                            
                            <StackPanel Orientation="Horizontal" Margin="0,3,0,5">
                                <TextBlock Text="{Binding Category}" FontSize="10" Foreground="#666666" Margin="0,0,10,0"/>
                                <TextBlock Text="{Binding Quests[0], StringFormat='Görev: {0}'}" FontSize="10" Foreground="#556644" Opacity="0.8">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Quests.Count}" Value="0">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="{Binding Requirements.Total, StringFormat='Toplam Gerekli: {0}'}" FontSize="11" Foreground="#8B6040"/>
                                    <ProgressBar Value="{Binding Requirements.Total}" Maximum="20" Height="5" Background="#111111" Foreground="#8B6040" Margin="0,4,12,0" BorderThickness="0"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="{Binding Requirements.FoundInRaid, StringFormat='Raid\'de Bulunmalı: {0}'}" FontSize="11" Foreground="#556644"/>
                                    <ProgressBar Value="{Binding Requirements.FoundInRaid}" Maximum="{Binding Requirements.Total}" Height="5" Background="#111111" Foreground="#556644" Margin="0,4,0,0" BorderThickness="0"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#131313" BorderBrush="#252525" BorderThickness="0,1,0,0" Padding="8,10">
            <Grid>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock x:Name="StatusText" Text="Başlatılıyor..." Foreground="#666666" FontSize="11"/>
                    <TextBlock x:Name="ItemCountText" Text="" Foreground="#556644" FontSize="11" Margin="15,0,0,0" FontWeight="Bold"/>
                </StackPanel>
                <ProgressBar x:Name="UpdateProgress" Visibility="Collapsed" Height="3" IsIndeterminate="False" 
                             Width="150" HorizontalAlignment="Right" Background="#1A1A1A" Foreground="#556644" BorderThickness="0"/>
            </Grid>
        </Border>
    </Grid>
</Window>
