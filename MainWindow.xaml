<Window x:Class="EFTLootTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EFTLootTracker"
        mc:Ignorable="d"
        Title="Tarkov Inventory Tracker" Height="800" Width="900" 
        Background="#1A1A1A" Foreground="#E0E0E0" WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <!-- ScrollBar Visual Styles -->
        <Style x:Key="ScrollBarThumb" TargetType="Thumb">
            <Setter Property="OverridesDefaultStyle" Value="true"/>
            <Setter Property="IsTabStop" Value="false"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Thumb">
                        <Border x:Name="rectangle" Background="#333333" CornerRadius="3" Margin="2,0,2,0"/>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter TargetName="rectangle" Property="Background" Value="#444444"/>
                            </Trigger>
                            <Trigger Property="IsDragging" Value="true">
                                <Setter TargetName="rectangle" Property="Background" Value="#556644"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ScrollBarButton" TargetType="RepeatButton">
            <Setter Property="OverridesDefaultStyle" Value="true"/>
            <Setter Property="Focusable" Value="false"/>
            <Setter Property="IsTabStop" Value="false"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RepeatButton">
                        <Border Background="Transparent">
                            <Path x:Name="Arrow" Fill="#444444" HorizontalAlignment="Center" VerticalAlignment="Center" Data="{Binding Content, RelativeSource={RelativeSource TemplatedParent}}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter TargetName="Arrow" Property="Fill" Value="#666666"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="ScrollBar">
            <Setter Property="Background" Value="#131313"/>
            <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"/>
            <Setter Property="Width" Value="10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid x:Name="Bg" Background="{TemplateBinding Background}" SnapsToDevicePixels="true">
                            <Grid.RowDefinitions>
                                <RowDefinition MaxHeight="10"/>
                                <RowDefinition Height="0.00001*"/>
                                <RowDefinition MaxHeight="10"/>
                            </Grid.RowDefinitions>
                            <RepeatButton Command="{x:Static ScrollBar.LineUpCommand}" Style="{StaticResource ScrollBarButton}" Content="M 0 4 L 4 0 L 8 4 Z"/>
                            <Track x:Name="PART_Track" Grid.Row="1" IsDirectionReversed="true" IsEnabled="{TemplateBinding IsMouseOver}">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Command="{x:Static ScrollBar.PageUpCommand}" Style="{StaticResource ScrollBarButton}" Opacity="0"/>
                                </Track.DecreaseRepeatButton>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Command="{x:Static ScrollBar.PageDownCommand}" Style="{StaticResource ScrollBarButton}" Opacity="0"/>
                                </Track.IncreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb Style="{StaticResource ScrollBarThumb}"/>
                                </Track.Thumb>
                            </Track>
                            <RepeatButton Grid.Row="2" Command="{x:Static ScrollBar.LineDownCommand}" Style="{StaticResource ScrollBarButton}" Content="M 0 0 L 4 4 L 8 0 Z"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ComboBox Item Style -->
        <Style TargetType="ComboBoxItem">
            <Setter Property="Background" Value="#1A1A1A"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border x:Name="ItemBorder" Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}" SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ItemBorder" Property="Background" Value="#313131"/>
                                <Setter Property="Foreground" Value="#AEB286"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="ItemBorder" Property="Background" Value="#2A2A2A"/>
                                <Setter Property="Foreground" Value="#556644"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Main ComboBox Style -->
        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="#1A1A1A"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="BorderBrush" Value="#333333"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid x:Name="MainGrid" SnapsToDevicePixels="true">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition MinWidth="{DynamicResource {x:Static SystemParameters.VerticalScrollBarWidthKey}}" Width="0"/>
                            </Grid.ColumnDefinitions>
                            <Popup x:Name="PART_Popup" AllowsTransparency="true" Grid.ColumnSpan="2" Placement="Bottom" Margin="0" IsOpen="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}}" PopupAnimation="{DynamicResource {x:Static SystemParameters.ComboBoxPopupAnimationKey}}">
                                <Border x:Name="DropDownBorder" Background="#1A1A1A" BorderBrush="#333333" BorderThickness="1" MinWidth="{Binding ActualWidth, ElementName=MainGrid}" MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                    <ScrollViewer x:Name="DropDownScrollViewer">
                                        <Grid x:Name="Grid" RenderOptions.ClearTypeHint="Enabled">
                                            <Canvas x:Name="Canvas" HorizontalAlignment="Left" Height="0" VerticalAlignment="Top" Width="0">
                                                <Rectangle x:Name="OpaqueRect" Fill="{Binding Background, ElementName=DropDownBorder}" Height="{Binding ActualHeight, ElementName=DropDownBorder}" Width="{Binding ActualWidth, ElementName=DropDownBorder}"/>
                                            </Canvas>
                                            <ItemsPresenter x:Name="ItemsPresenter" KeyboardNavigation.DirectionalNavigation="Contained" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                                        </Grid>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                            <ToggleButton BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" Grid.ColumnSpan="2" IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border x:Name="templateRoot" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Padding="5" CornerRadius="2">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <ContentPresenter Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Center" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                                                <Path x:Name="Arrow" Grid.Column="1" Data="M0,0 L4,4 L8,0 Z" Fill="#666666" HorizontalAlignment="Center" Margin="5,0,0,0" VerticalAlignment="Center"/>
                                            </Grid>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="true">
                                                <Setter TargetName="templateRoot" Property="Background" Value="#252525"/>
                                                <Setter TargetName="Arrow" Property="Fill" Value="#E0E0E0"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>
                            <ContentPresenter Grid.Column="0" ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}" Content="{TemplateBinding SelectionBoxItem}" ContentStringFormat="{TemplateBinding SelectionBoxItemStringFormat}" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" IsHitTestVisible="false" Margin="{TemplateBinding Padding}" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Title/Search -->
            <RowDefinition Height="*"/>    <!-- List -->
            <RowDefinition Height="Auto"/> <!-- Status -->
        </Grid.RowDefinitions>

        <!-- Search & Filter Bar -->
        <Border Grid.Row="0" Background="#262626" CornerRadius="4" Padding="10" Margin="0,0,0,10" BorderBrush="#333333" BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="🔍" VerticalAlignment="Center" Margin="0,0,8,0" Opacity="0.5"/>
                <TextBox x:Name="SearchBox" Grid.Column="1" Background="Transparent" BorderThickness="0" 
                         Foreground="#E0E0E0" FontSize="14" CaretBrush="#556644"
                         TextChanged="SearchBox_TextChanged" GotFocus="SearchBox_GotFocus" LostFocus="SearchBox_LostFocus"/>
                <TextBlock x:Name="SearchPlaceholder" Grid.Column="1" Text="Eşya Ara..." IsHitTestVisible="False" 
                           VerticalAlignment="Center" Foreground="#505050" FontSize="14" Visibility="Visible"/>
                
                <ComboBox x:Name="FilterCombo" Grid.Column="2" Margin="10,0,0,0" 
                          SelectionChanged="FilterCombo_SelectionChanged">
                    <ComboBoxItem Content="Tümü" IsSelected="True"/>
                </ComboBox>
            </Grid>
        </Border>

        <!-- Item List -->
        <ListBox x:Name="ItemsListBox" Grid.Row="1" Background="Transparent" BorderThickness="0" 
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListBoxItem">
                                <Border x:Name="ItemBorder" Background="#222222" CornerRadius="4" Margin="0,0,0,8" Padding="12" 
                                        BorderBrush="#313131" BorderThickness="1">
                                    <ContentPresenter />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="ItemBorder" Property="Background" Value="#2A2A2A" />
                                        <Setter TargetName="ItemBorder" Property="BorderBrush" Value="#556644" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListBox.ItemContainerStyle>
            
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="64"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Icon -->
                        <Border Width="54" Height="54" HorizontalAlignment="Center" Background="#111111" CornerRadius="2" BorderBrush="#333333" BorderThickness="1">
                            <Image Source="{Binding LocalIconPath}" Stretch="Uniform" Margin="4"/>
                        </Border>

                        <!-- Info -->
                        <StackPanel Grid.Column="1" Margin="12,0,0,0">
                            <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="15" Foreground="#E0E0E0"/>
                            
                            <StackPanel Orientation="Horizontal" Margin="0,3,0,5">
                                <TextBlock Text="{Binding Category}" FontSize="10" Foreground="#666666" Margin="0,0,10,0"/>
                            </StackPanel>
                            
                            <StackPanel Margin="0,5,0,0">
                                <!-- Quests Section -->
                                <StackPanel Visibility="{Binding HasFilteredQuests, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <TextBlock Text="Quests:" FontSize="10" Foreground="#666666" FontWeight="Bold" Margin="0,0,0,2"/>
                                    <ItemsControl ItemsSource="{Binding FilteredQuests}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <WrapPanel Orientation="Horizontal"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border x:Name="QuestBorder" Background="#2A2A1A" BorderBrush="#556644" BorderThickness="1" CornerRadius="3" Padding="6,2" Margin="0,0,5,5">
                                                    <TextBlock x:Name="QuestText" Text="{Binding}" FontSize="10" Foreground="#AEB286"/>
                                                </Border>
                                                <DataTemplate.Triggers>
                                                    <DataTrigger Binding="{Binding IsFir}" Value="True">
                                                        <Setter TargetName="QuestBorder" Property="Background" Value="#1A233A"/>
                                                        <Setter TargetName="QuestBorder" Property="BorderBrush" Value="#3A5A8B"/>
                                                        <Setter TargetName="QuestText" Property="Foreground" Value="#A0C5E8"/>
                                                    </DataTrigger>
                                                </DataTemplate.Triggers>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>

                                <!-- Hideout Section -->
                                <StackPanel Visibility="{Binding HasFilteredHideoutModules, Converter={StaticResource BooleanToVisibilityConverter}}" Margin="0,5,0,0">
                                    <TextBlock Text="Hideout:" FontSize="10" Foreground="#666666" FontWeight="Bold" Margin="0,0,0,2"/>
                                    <ItemsControl ItemsSource="{Binding FilteredHideoutModules}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <WrapPanel Orientation="Horizontal"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border x:Name="HideoutBorder" Background="#2A1A1A" BorderBrush="#8B4040" BorderThickness="1" CornerRadius="3" Padding="6,2" Margin="0,0,5,5">
                                                    <TextBlock x:Name="HideoutText" Text="{Binding}" FontSize="10" Foreground="#E09090"/>
                                                </Border>
                                                <DataTemplate.Triggers>
                                                    <DataTrigger Binding="{Binding IsFir}" Value="True">
                                                        <Setter TargetName="HideoutBorder" Property="Background" Value="#1A233A"/>
                                                        <Setter TargetName="HideoutBorder" Property="BorderBrush" Value="#3A5A8B"/>
                                                        <Setter TargetName="HideoutText" Property="Foreground" Value="#A0C5E8"/>
                                                    </DataTrigger>
                                                </DataTemplate.Triggers>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>

                                <!-- Summary Stats -->
                                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                    <TextBlock Text="{Binding FilteredTotal, StringFormat='Toplam: {0}'}" FontSize="10" Foreground="#888888" Margin="0,0,10,0"/>
                                    <TextBlock Text="{Binding FilteredFir, StringFormat='FIR: {0}'}" FontSize="10" Foreground="#3A5A8B" FontWeight="Bold"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#131313" BorderBrush="#252525" BorderThickness="0,1,0,0" Padding="8,10">
            <Grid>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock x:Name="StatusText" Text="Başlatılıyor..." Foreground="#666666" FontSize="11"/>
                    <TextBlock x:Name="ItemCountText" Text="" Foreground="#556644" FontSize="11" Margin="15,0,0,0" FontWeight="Bold"/>
                </StackPanel>
                <ProgressBar x:Name="UpdateProgress" Visibility="Collapsed" Height="3" IsIndeterminate="False" 
                             Width="150" HorizontalAlignment="Right" Background="#1A1A1A" Foreground="#556644" BorderThickness="0"/>
            </Grid>
        </Border>
    </Grid>
</Window>
